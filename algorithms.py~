#!/usr/bin/python

def wordgen():
    dictionaries = dictfiles(options['lengths'])
    outfile = open(options['outfile'],"w")
    serial = 0
    for d in dictionaries:
        print "\nOpening dictionary "+d+"..."
        dictionary = open(d,"r")
        linenum = 0

    # loop over contents
        for word in dictionary.readlines():
            if options['curldef']:
                time.sleep(1)
            if linenum % 100 == 0:
                stdout.write(".")
                stdout.flush()
            if (linenum + 1 ) % 8000 == 0:
                stdout.write('\n')
                stdout.flush()

            word = word.strip()
            s = model.Spelling(word)

            linenum += 1
            serial += 1

            if options['curldef']:
                outfile.write(str(serial) + '\t' + str(s) + '\n' + curldef.curldef(word))
            else:
                outfile.write(str(serial) + '\t' + str(s) + '\n')
    
        outfile.close()

